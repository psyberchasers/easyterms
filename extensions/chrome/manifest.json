{
  "manifest_version": 3,
  "name": "EasyTerms - Contract Analyzer",
  "version": "1.0.0",
  "description": "Analyze music contracts instantly. Upload contracts and get AI-powered insights on risks, terms, and recommendations.",
  "permissions": [
    "storage",
    "activeTab",
    "contextMenus",
    "scripting"
  ],
  "host_permissions": [
    "*://*.easyterms.ai/*",
    "*://easyterms.ai/*",
    "http://localhost:3000/*",
    "https://*.supabase.co/*",
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.easyterms.ai/*", "*://easyterms.ai/*", "http://localhost:3000/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "externally_connectable": {
    "matches": ["*://*.easyterms.ai/*", "*://easyterms.ai/*", "http://localhost:3000/*"]
  }
}
